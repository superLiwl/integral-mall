/* component/lotteryMachine/lotteryMachine.wxss */

.lottery-container {
  position: relative;
  width: 534.52rpx;
  height: 459rpx;
  margin: 13rpx auto 0;
}

.lottery-bg {
  width: 100%;
  height: 100%;
}

.lottery-title {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.lottery-t-text {
  font-size: 30rpx;
  color: #79000d;
}

.lottery-chance {
  position: absolute;
  width: 100%;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}

.lottery-main {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 460.39rpx;
  height: 330.34rpx;
}

.lottery-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 148.76rpx;
  height: 106.83rpx;
  float: left;
  margin-left: 4.5rpx;
  margin-top: 4rpx;
  box-sizing: border-box;
}

.lottery-item-img {
  width: 85%;
  height: 66rpx;
}

.lottery-item-txt {
  font-size: 20rpx;
}

.lottery-main .lottery-item:nth-child(1),
.lottery-main .lottery-item:nth-child(2),
.lottery-main .lottery-item:nth-child(3) {
  margin-top: 0;
}

.lottery-main .lottery-item:nth-child(3),
.lottery-main .lottery-item:nth-child(6),
.lottery-main .lottery-item:nth-child(9) {
  margin-left: 1rpx;
}

.active {
  border: 1px solid orangered;
}
