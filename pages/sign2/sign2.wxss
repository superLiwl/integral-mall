.sign-header{
  width: 100%;
  height: 373.8rpx;
  background: url('https://www.youmahui.net/sign-head-bg.png') no-repeat;
  background-size: 100% auto;
}
.sign-btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 184rpx;
  height: 184rpx; 
  padding: 71.4rpx 0 13.2rpx;
  margin: auto;
  text-indent:10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #94320d;
}
.sign-explain{
  width: 100%;
  height: 40.8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sign-explain-title{
  letter-spacing: 40.8rpx;
  text-indent: 40.4rpx;
  font-size: 26.7rpx;
  color: #f84294;
}

.calendar{
  width: 693rpx;
  margin: 24rpx auto 24rpx;
}

.sign-explain-copy{
  padding: 20rpx auto 36rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fe6a90;
}
.sign-reward-box{
  display: flex;
  justify-content: center;
  margin-top: 43.2rpx;
}

.sign-reward-box .reward-box-item:nth-child(2){
  margin: 0 10rpx;
}
.reward-box-item{
  width: 228rpx;
  height: 288rpx;
  border: 1px solid #e2e2e2;
  border-radius: 50rpx;
  box-shadow: 0rpx 4rpx 2rpx #eaeaea;
}
.head{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 162rpx;
  background: url('https://www.youmahui.net/reward-head.png') no-repeat;
  background-size: 100% auto;
}
.sign-bottom{
  margin-bottom: 22.2rpx;
}
.sign-integral{
  font-size: 78rpx;
  color: #fff;
}
.sign-reward-txt{
  font-size: 26rpx;
  color: #fff;
}
.box-item-footer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  font-size: 26rpx;
  color: #000;
}
.condition-day{
  color: #ff2b9a;
}
.receive-btn{
  width: 180rpx;
  height: 42rpx;
  margin-top: 16rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 20rpx;
  color: #fff;
  background: linear-gradient(#f860bf, #bd53fa);
}
.receive-btn-gray{
  background: #bfbfbf;
}
/* 签到弹窗s */
.popup-success{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.popup-success-sign{
  position: absolute;
  width: 620.4rpx;
  height: 505.8rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9;
}
.success-sign-img{
  width: 100%;
}
.popup-success .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: .6;
}
.close{
  position: absolute;
  top: 0;
  right: 10%;
  width:48rpx;
  height:48rpx;
}
.close-img{
  width:48rpx;
  height:48rpx;
}