/* pages/login/login.wxss */

.container {
  width: 100%;
  height: 100%;
  background-color: #79000d;
}

.login-container {
  width: 100%;
  height: 100%;
}

.login-container img {
  width: 100%;
}

.login-bg {
  width: 100%;
  height: 100%;
  display: block;
}

.login-form-container {
  position: absolute;
  top: 560rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-form-container .phone{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background-color: #ccc;
}
.vcode-input-box{
  display: flex;
  width: 260rpx;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background-color: #ccc;
}

.login-inpplaceholder {
  color: #979797;
  /* background-color: #fff; */
}

.phone-inp {
  width: 100%;
  height: 70rpx;
  background-repeat: no-repeat;
  background-position: 10rpx 0;
}
.vcode{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.vcode-inp{
  width: 270rpx;
  height: 70rpx;
  float: left;
  background-color: #ccc;
  border-radius: 10rpx;
}
.phone-icon, .vcode-icon{
  width: 36rpx;
  margin: 0 20rpx;
}
.countdown{
  line-height: 70rpx;
  color: #fff;
  font-size: 32rpx;
}
.login-btn{
  height: 70rpx;
  margin-top: 30rpx;
  line-height: 70rpx;
  background:linear-gradient(to left,#bf965b,#fff9cb,#bf965b);
}
.countdown{
  font-size: 24rpx;
}
.btn-code{
  width:211rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #79000d;
  border: none;
}
button[disabled][type="default"], wx-button[disabled]:not([type]){
  color: #fff !important;
  background-color: #79000d !important;
}