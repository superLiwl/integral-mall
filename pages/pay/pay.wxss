/**index.wxss**/
body{width:100%;height:100%;background:#f2f2f2}
.container{width:100%;height:100%;display:block;position:absolute;background-color:#f2f2f2;padding: 0}
.head{height:30px;background-color:#ffffff;top: 0px;width: 100%;line-height: 30px;padding:10px 15px;}
.left_con{float: left;width:40%;}
.right_con{float:left;width: 50%;text-align: right;}
.money{float: right;}
.pay_con{clear: both}
.ico image{width:20px;height:20px;}
.pay_con{padding:0px 15px;background-color: #fff;margin-top: 10px;}
.wx_pay,.wx_balance{height:30px;padding:10px 0;position:relative}
.ico{position:absolute;top:12px;}
.pay_text{width:100px;left:30px;position:absolute;}
.checkbox{float:right;}
.check_img{float:right;margin-top:2px;}
.check_img image{width:20px;height:20px;}
.foot{position:absolute;width:100%;bottom:0;height:50px;background:#fff;}
.pay_button{background-color:#fe5b85;width:70%}